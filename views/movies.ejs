<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Movie Catalog</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.rtl.min.css"
        integrity="sha384-+4j30LffJ4tgIMrq9CwHvn0NjEvmuDCOfk6Rpg2xg7zgOxWWtLtozDEEVvBPgHqE" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="img/Blockbuster_logo.svg.png">
    <link rel="stylesheet" href="css/main_style.css">
</head>

<body>

    <div class="container-fluid">
        <div class="row">
            <nav class="navbar bg-dark">
                <div class="container-fluid">
                    <a href="/movies"><img src="img/Blockbuster_logo.svg.png" style="width: 50px; height: 50px"
                            class="g-3"></a>
                    <a href="/searchMovies" style="margin-right: 10px"><button class="btn btn-outline-warning"
                            type="button">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-search" viewBox="0 0 16 16">
                                <path
                                    d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                            </svg> Search Movies</button></a>
                    <div class="dropdown">
                        <button type="submit" onclick="showDropDown()" class="btn btn-primary dropbtn">Hello,
                            <%=movies.username%>
                        </button>
                        <div id="myDropdown" class="dropdown-content">
                            <a href="/logout">Logout</a>
                        </div>
                    </div>
                </div>
            </nav>
            <div class="container text-center g-3">
                <div class="row g-3 results">
                    <% for (var i=0; i < movies.length; i++) { %>
                        <div class="col-md-3 col-4">
                            <div class="card">
                                <iframe src="<%=movies[i].trailer%>" height="230">
                                </iframe>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%=movies[i]._id%>
                                    </h5>
                                    <p class="card-text"><b>Synopsis: </b>
                                        <%=movies[i].preview%>
                                    </p>
                                    <p><b>Director: </b>
                                        <%=movies[i].director%>
                                    </p>
                                    <p><b>Publish Year: </b>
                                        <%=movies[i].year%>
                                    </p>
                                    <p><b>Movie Length: </b>
                                        <%=movies[i].length%>
                                    </p>
                                    <p><b>Main Actors: </b>
                                        <% for (var j=0; j < movies[i].main_actors.length; j++) { %>
                                            <% if(j==movies[i].main_actors.length - 1) {%>
                                                <%=movies[i].main_actors[j]%>
                                                    <%} else { %>
                                                        <%=movies[i].main_actors[j]%>,
                                                            <%}%>
                                                                <%}%>
                                    </p>
                                    <p><b>Genere: </b>
                                        <% for (var k=0; k < movies[i].type.length; k++) { %>
                                            <% if(k==movies[i].type.length - 1) {%>
                                                <%=movies[i].type[k]%>
                                                    <%} else { %>
                                                        <%=movies[i].type[k]%>,
                                                            <%}%>
                                                                <%}%>
                                    </p>
                                    <p><b>Cost: </b>
                                        <%=movies[i].price%>$
                                    </p>
                                    <button type="submit" class="btn btn-outline-success"><svg
                                            xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                                            <path
                                                d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                        </svg> Add to cart</button>
                                </div>
                            </div>
                        </div>
                        <%}%>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>



    <script src="https://code.jquery.com/jquery-3.6.1.min.js"
        integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>

    <script src="js/movies.js">

    </script>
</body>

</html>